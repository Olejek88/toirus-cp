extends ../../layouts/default

block intro

block flash-messages

block content
	.container-sm
		.page-intro
			p.lead Редактирование параметров сервиса
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-cug
				| #{ service.name}
			br
			+flash-messages(messages)
			form(method='post', enctype='multipart/form-data', autocomplete='off', novalidate).form-horizontal
				input(type='hidden', name='action', value='service.details')
				.form-group.ph-1
					label.col-sm-2.control-label Название
					.col-sm-10: .form-row
						.col-xs-6: input(type='text', name='name' value=service.name).form-control
				.form-group.ph-1
					//label.col-sm-2.control-label Описание
					//.col-sm-10: input(type='description', name='description' value=service.description).form-control
					label Описание
					textarea(name='description' value=service.description, class='wysiwyg', placeholder='Описание объекта автоматизации / сервиса / услуги, подробности и комментарий').input.input-faded

			.panel-heading
				| Запросить изменение параметров сервиса
				.form-group.ph-1
					label.col-sm-2.control-label Количество пользователей
					.col-sm-10: .form-row
						.col-xs-6: input(type='text', name='users_num' value=service.users_num).form-control
				.form-group.ph-1
					label.col-sm-2.control-label Количество тегов
					.col-sm-10: input(type='text', name='tags_num' value=service.tags_num).form-control
				.form-group.ph-2
					button(type='submit', data-loading-text="Сохраняем...").btn.btn-primary.ph-1 Сохранить параметры
block js
	script(src='/js/views/me.js')
