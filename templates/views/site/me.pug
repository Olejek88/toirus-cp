extends ../../layouts/default

block intro

block flash-messages

block content
	.container-sm
		.page-intro
			span.entypo.entypo-home(font-size:'40px')
			|   Мой аккаунт			
			a(href='/meedit').text-muted редактировать
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-user
				|  #{user.name}
			br
			p.lead.ph-1 e-mail: #{user.email}
			if user.status		
				p.lead.green.ph-1 статус: активен
			else
				p.lead.ph-1 статус: не активен
			if user.client
				p.lead.ph-1 клиент: #{user.client.name}
			//p.lead.ph-1 права доступа: #{user.roles}
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-star
				| Статистика аккаунта
			br
			p.lead.ph-1 количество сервисов (активных/всего): #{serviceactive}/#{servicecount}
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-bell
				| Открытые тикеты
			if tickets
				each ticket in tickets
					if ticket
						p.lead.ph-1 #{ticket.ticketId}
						p.lead.ph-1 #{ticket.type}
						p.lead.ph-1 #{ticket.status}
						p.lead.ph-1 #{ticket.createdAt}
						p.lead.ph-1 #{ticket.message}
			else
				h3.text-muted Нет запросов
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-book
				| Последние транзакции
							
block js
	script(src='/js/views/me.js')
