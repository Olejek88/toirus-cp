extends ../../layouts/default

block intro

block flash-messages

block content
	.container-sm
		.page-intro
			p.lead Заполнить карточку клиента
		.page-content.tile.ph-0.pv-2.mb-2
			.panel-heading
				span.entypo.entypo-add-user
				|  Новый клиент
			br
			+flash-messages(messages)
			form(method='post', enctype='multipart/form-data', autocomplete='off', novalidate).form-horizontal
				input(type='hidden', name='action', value='client.add')
				.form-group.ph-1
					label.col-sm-2.control-label Название
					input(type='text', id='name', name='name', placeholder='Название организации клиента').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Телефон
					input(type='text', id='phone', name='phone', placeholder='Телефон').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Адрес
					input(type='text', id='address', name='address', placeholder='Адрес').input.input-md.form-control
				.form-group.ph-1
					label.col-sm-2.control-label Описание
					textarea(name='description', class='wysiwyg', rows='6', cols='80').input.input-faded
				.form-group.ph-1
					label.col-sm-2.control-label Метод оплаты
					select(name='method').form-control
						option(value='') (выберите)
						each method in methods
							option(value=method.id)= method.name
				.form-group.ph-2
					button(type='submit', data-loading-text="Сохраняем...").btn.btn-primary.ph-1 Добавить клиента
block js
	script(src='/js/views/clientnew.js')
